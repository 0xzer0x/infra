<?xml version="1.0" encoding="UTF-8"?>
<style-scheme _name="Catppuccin Mocha Blue" id="catppuccin-mocha-blue" version="1.0">
  <author>Adapted with Blue Accent</author>
  <_description>Catppuccin Mocha color scheme (Blue accent)</_description>

  <!-- Core Palette -->
  <color name="background" value="#1e1e2e"/>   <!-- Base -->
  <color name="current-line" value="#313244"/> <!-- Surface0 -->
  <color name="selection" value="#89b4fa"/>    <!-- Blue accent -->
  <color name="foreground" value="#cdd6f4"/>   <!-- Text -->
  <color name="comment" value="#6c7086"/>      <!-- Overlay0 -->
  <color name="cyan" value="#89dceb"/>         <!-- Sky -->
  <color name="green" value="#a6e3a1"/>        <!-- Green -->
  <color name="orange" value="#fab387"/>       <!-- Peach -->
  <color name="pink" value="#f5c2e7"/>         <!-- Pink -->
  <color name="purple" value="#cba6f7"/>       <!-- Mauve -->
  <color name="red" value="#f38ba8"/>          <!-- Red -->
  <color name="yellow" value="#f9e2af"/>       <!-- Yellow -->
  <color name="lavender" value="#b4befe"/>     <!-- Lavender -->
  <color name="blue" value="#89b4fa"/>         <!-- Blue -->
  <color name="sapphire" value="#74c7ec"/>     <!-- Sapphire -->
  <color name="sidebar" value="#181825"/>      <!-- Mantle -->

  <!-- Global -->
  <style background="background" foreground="foreground" name="text"/>
  <style background="selection" foreground="background" name="selection"/>
  <style foreground="lavender" name="cursor"/>
  <style foreground="overlay0" name="secondary-cursor"/>
  <style background="Surface1" foreground="blue" name="bracket-match"/>
  <style background="Surface1" foreground="red" name="bracket-mismatch"/>
  <style background="blue" foreground="background" name="search-match"/>

  <!-- Syntax -->
  <style bold="true" foreground="blue" name="def:keyword"/>
  <style foreground="blue" name="def:statement"/>
  <style foreground="green" name="def:function"/>
  <style foreground="mauve" name="def:number"/>
  <style foreground="yellow" name="def:string"/>
  <style foreground="orange" name="def:variable"/>
  <style foreground="lavender" name="def:type"/>
  <style foreground="pink" name="def:constant"/>
  <style bold="true" foreground="red" name="def:error"/>
  <style foreground="comment" name="def:comment"/>
  <style italic="true" foreground="cyan" underline="true" name="def:net-address-in-comment"/>
  <style bold="true" foreground="blue" name="def:boolean"/>
  <style italic="true" name="def:emphasis"/>
  <style bold="true" foreground="lavender" name="def:strong-emphasis"/>
  <style foreground="lavender" name="def:link-text"/>
  <style bold="true" foreground="sapphire" name="def:link-symbol"/>
  <style italic="true" foreground="sky" underline="single" name="def:link-destination"/>
  <style bold="true" foreground="blue" name="def:heading"/>

  <!-- Diff -->
  <style foreground="green" name="diff:added-line"/>
  <style foreground="red" name="diff:removed-line"/>
  <style foreground="yellow" name="diff:changed-line"/>
  <style bold="true" foreground="blue" name="diff:diff-file"/>
  <style foreground="lavender" name="diff:location"/>

  <!-- LaTeX / Others -->
  <style bold="true" foreground="orange" name="latex:command"/>
</style-scheme>
